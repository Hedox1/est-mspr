import json
import base64

# Données à encoder en base64
donnees_originales = "salut je suis Hedi."

# Encodage en base64
donnees_base64 = base64.b64encode(donnees_originales.encode('utf-8')).decode('utf-8')

# Création du dictionnaire JSON
donnees_json = {
    "donnees_encodes_base64": donnees_base64
}

# Écriture du JSON dans un fichier
with open('exemple.json', 'w') as fichier:
    json.dump(donnees_json, fichier, indent=4)

print("Fichier JSON créé avec succès.")
